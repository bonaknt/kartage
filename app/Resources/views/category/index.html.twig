{% extends 'admin/index.html.twig' %}

{% block body %}
    <h1>Liste des Categories</h1>

<div class="container">      
<p class="text-right"><a class="align-right" href="{{ path('category_new') }}">Créer une nouvelle catégorie</a> </p><br />    
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Id</th>
        <th>Titre</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td><a href="{{ path('category_show', { 'id': category.id }) }}">{{ category.title }}</a></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('category_show', { 'id': category.id }) }}">Voir</a>
                        </li>
                        <li>
                            <a href="{{ path('category_edit', { 'id': category.id }) }}">modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>

        {% endfor %}

    </tbody>
  </table>

</div>
{% endblock %}
