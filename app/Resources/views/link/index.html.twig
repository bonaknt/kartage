{% extends 'admin/index.html.twig' %}

{% block body %}
    <h1>Liste des liens</h1>


<div class="container">
<p class="text-right"><a class="align-right" href="{{ path('link_new') }}">Cr√©er un nouveau lien</a> </p><br />
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Id</th>
        <th>Titre</th>
        <th>Liens</th>
        <th>Description</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
        {% for link in links %}
            <tr>

                <td> {{ link.id }} </td>
                <td>{{ link.title }}</td>
                <td><a href="{{ link.link }}">{{ link.link | truncate(50) }}</a></td>
                <td>{{ link.description | truncate(50) }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('link_show', { 'id': link.id }) }}">Voir</a>
                        </li>
                        {% if app.user and is_granted('ROLE_ADMIN') %}
                        <li>
                            <a href="{{ path('link_edit', { 'id': link.id }) }}">Modifier</a>
                        </li>
                        {% endif %}
                    </ul>
                </td>
            </tr>

        {% endfor %}

    </tbody>
  </table>

<div class="pagination">
<span class="text-left">Page </span>
{% for i in 1..pagesTotales %}
    {% if i == pageCourante %}

        <span class="paginer"> {{ i }} </span>

    {% else %}

        <a class="paginer" href="?page={{i}}"> {{i}} </a>

    {% endif %}
{% endfor %}
</div>

</div>


{% endblock %}
